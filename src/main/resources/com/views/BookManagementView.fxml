<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.library.controllers.BookManagementController"
      spacing="10"
      style="-fx-padding: 10;">

    <Label text="จัดการหนังสือ" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <ComboBox fx:id="categoryComboBox" promptText="เลือกหมวดหมู่"/>
        <TextField fx:id="searchField" promptText="ค้นหาหนังสือ"/>
        <Button text="ค้นหา" onAction="#handleSearchBook"/>
        <Button text="เพิ่มหนังสือ" onAction="#handleAddBook"/>
    </HBox>

    <TableView fx:id="bookTableView">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="titleColumn" text="ชื่อหนังสือ"/>
            <TableColumn fx:id="authorColumn" text="ผู้แต่ง"/>
            <TableColumn fx:id="categoryColumn" text="หมวดหมู่"/>
            <TableColumn fx:id="statusColumn" text="สถานะ"/>
        </columns>
    </TableView>

</VBox>