<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.library.controllers.AdminMainController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- แถบด้านบน -->
    <top>
        <HBox style="-fx-background-color: #3F51B5; -fx-padding: 10;"
              alignment="CENTER_LEFT" spacing="10">
            <Label text="ระบบจัดการห้องสมุด - Admin"
                   style="-fx-text-fill: white; -fx-font-size: 18;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="usernameLabel" style="-fx-text-fill: white;"/>
            <Button text="ออกจากระบบ" onAction="#handleLogout"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
        </HBox>
    </top>

    <!-- แถบนำทางด้านซ้าย -->
    <left>
        <VBox style="-fx-background-color: white; -fx-padding: 10;" spacing="5" prefWidth="200">
            <Button text="แดชบอร์ด" maxWidth="Infinity" onAction="#showDashboard"
                    style="-fx-background-color: #5C6BC0; -fx-text-fill: white;"/>
            <Button text="จัดการหนังสือ" maxWidth="Infinity" onAction="#showBookManagement"/>
            <Button text="จัดการสมาชิก" maxWidth="Infinity" onAction="#showMemberManagement"/>
            <Button text="ยืม-คืนหนังสือ" maxWidth="Infinity" onAction="#showBorrowReturn"/>
        </VBox>
    </left>

    <!-- ส่วนกลาง -->
    <center>
        <StackPane fx:id="contentArea">
            <!-- เริ่มต้นแสดง dashboard ซึ่งจะถูกโหลดใน AdminMainController.initialize() -->
        </StackPane>
    </center>
</BorderPane>